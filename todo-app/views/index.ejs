<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo Application</title>
    <link href="./css/styles.css" rel="stylesheet">
    <style>
        /* Add any additional CSS styles here */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header>
        <%- include('header.ejs') %>
    </header>

    <!-- Main Content -->
    <main>
        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
            </tr>
            <% for (var i=0; i < allTodos.length; i++) { %>
                <tr>
                    <td>
                        <%= allTodos[i].title %>
                    </td>
                    <td>
                        <%= allTodos[i].description %>
                    </td>
                    <td>
                        <%= allTodos[i].status %>
                    </td>
                </tr>
                <% } %>
        </table>
    </main>

    <!-- Footer -->
    <footer>
        <%- include('footer.ejs') %>
    </footer>
</body>

</html>