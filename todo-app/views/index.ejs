<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <title>To-Do App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function updateTodo(id) {
            fetch(`/todo/${id}/markAsCompleted`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.error(err));
        }
        function deleteTodo(id) {
            fetch(`/todo/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => {
                    console.error(err)
                })
        }
    </script>
</head>

<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
                <form action="/todo" method="post">
                    <div class="flex gap-2 py-4">
                        <div class="flex-auto">
                            <input type="text" name="title" placeholder="What's next?"
                                class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm leading-5"
                                required />
                        </div>
                        <div class="flex-auto">
                            <input type="date" name="dueDate"
                                class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm leading-4" />
                        </div>
                        <div class="flex-none">
                            <button type="submit"
                                class="bg-green-600 text-white px-5 py-2 rounded font-medium mr-2 mb-2 leading-5">Add</button>
                        </div>
                    </div>
                </form>
                <div>
                    <%- include('todos.ejs', { title: "Overdue" , data: overdue }) %>
                        <%- include('todos.ejs', { title: "Due Today" , data: dueToday }) %>
                            <%- include('todos.ejs', { title: "Due Later" , data: dueLater }) %>
                </div>
        </div>
    </div>
</body>

</html>